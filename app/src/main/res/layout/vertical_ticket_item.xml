<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="8dp"
    app:cardElevation="0dp"
    android:layout_marginVertical="4dp"
    app:cardCornerRadius="8dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/ticket_thumbnail"
            android:layout_width="100dp"
            android:layout_height="120dp"
            android:contentDescription="@string/ticket_thumbnail"
            tools:src="@mipmap/ic_launcher" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="4dp">

            <TextView
                android:id="@+id/ticket_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:maxLines="1"
                android:ellipsize="end"
                android:fontFamily="@font/nunito_bold"
                tools:text="Ticket Title" />

            <TextView
                android:id="@+id/ticket_price"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/nunito_bold"
                android:textSize="16sp"
                tools:text="@string/ticket_price" />

            <TextView
                android:id="@+id/ticket_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:drawablePadding="4dp"
                android:textSize="12sp"
                android:fontFamily="@font/nunito_light"
                app:drawableStartCompat="@drawable/baseline_location_pin_24"
                tools:text="City Name, State" />

            <TextView
                android:id="@+id/ticket_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:textSize="12sp"
                android:gravity="center_vertical"
                android:fontFamily="@font/nunito_light"
                app:drawableStartCompat="@drawable/baseline_calendar_month_24"
                tools:text="April 3, 2025, 10:00 PM" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>